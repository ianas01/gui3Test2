<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="690dp"
            android:padding="24dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="GUI3"
                android:textSize="20sp"
                android:textStyle="italic" />


            <EditText
                android:id="@+id/établissement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Ville"
                android:layout_marginTop="162dp"
                android:hint="Établissement"
                 />

            <EditText
                android:id="@+id/Tutelle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Ville"
                android:layout_marginTop="215dp"
                android:hint="Tutelle "
                 />

            <EditText
                android:id="@+id/Département"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Ville"
                android:layout_marginTop="107dp"
                android:hint="Département"
                 />

            <EditText
                android:id="@+id/filiere"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Ville"
                android:layout_marginTop="55dp"
                android:hint="filiére"
                 />

            <EditText
                android:id="@+id/pays"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Ville"
                android:layout_marginTop="0dp"
                android:hint="pays"
                 />

            <EditText
                android:id="@+id/date_de_naissance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cin"
                android:layout_marginTop="10dp"
                android:hint="date de naissance"
                 />

            <EditText
                android:id="@+id/adresse_postale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/date_de_naissance"

                android:hint="adresse postale"
                 />

            <EditText
                android:id="@+id/Ville"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/adresse_postale"
                android:layout_marginTop="6dp"
                android:hint="Ville"
                 />

            <EditText
                android:id="@+id/nom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_marginTop="-25dp"
                android:hint="nom"

                />

            <EditText
                android:id="@+id/prenom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nom"
                android:layout_marginTop="2dp"
                android:hint="prenom"
                 />

            <EditText
                android:id="@+id/cin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/prenom"
                android:layout_marginTop="7dp"
                android:hint="CIN"
                 />




            <Button
                android:id="@+id/saveButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Tutelle"

                android:backgroundTint="@android:color/holo_red_dark"
                android:text="entrez" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>



</LinearLayout>